@section scripts{
    <script>
        $(document).ready(function () {
            $(".btnDetails").click(function () {
                $("#ModelPopUp").html('');
                var empId = $(this).attr("id");
               
                $.ajax({
                type: "GET",
                url: '@Url.Action("Details", "Employee")' + '/' + empId,
                dataType: "html",
                    success: function (content) {
                        $("#ModelPopUp").html('');
                        $("#ModelPopUp").html(content);
                        $('#myModal').modal('show');
                },
                error: function (e) { }
            });


            });
            $("#btnAdd").on("click", function () {
                $("#ModelPopUp").html('');
                $.ajax({
                type: "GET",
                url: '@Url.Action("Create", "Employee")',
                dataType: "html",
                success: function (content) {
                    $("#ModelPopUp").html(content);
                },
                error: function (e) { }
            });
            });
            $(".btnUpdate").on("click", function () {
                $("#ModelPopUp").html('');
                var empId = $(this).attr("id");
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Edit", "Employee")' + '/' + empId,
                dataType: "html",
                success: function (content) {
                    $("#ModelPopUp").html(content);
                },
                error: function (e) { }
            });
            });
            $(".btnDelete").on("click", function () {
                $("#ModelPopUp").html('');
                var empId = $(this).attr("id");
                if (confirm("Are sure to want to delete the record?")) {
                     $.ajax({
                    type: "GET",
                    url: '@Url.Action("Delete", "Employee")' + '/' + empId,
                dataType: "html",
                         success: function (content) {
                             window.location.reload();
                },
                error: function (e) { }
            });
